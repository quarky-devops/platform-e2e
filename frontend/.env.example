# QuarkfinAI AWS Environment Configuration
# Copy these values from CDK deployment outputs

# AWS Region
NEXT_PUBLIC_AWS_REGION=us-east-1

# AWS Cognito Configuration (from AuthStack outputs)
NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
NEXT_PUBLIC_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# API Configuration
# Development: Use local backend
# Production: Use CloudFront distribution
NEXT_PUBLIC_API_URL=/api

# Platform Configuration
NEXT_PUBLIC_PLATFORM_NAME=QuarkfinAI
NEXT_PUBLIC_PLATFORM_URL=https://app.quarkfin.ai

# Feature Flags
NEXT_PUBLIC_ENABLE_GOOGLE_AUTH=true
NEXT_PUBLIC_ENABLE_PHONE_VERIFICATION=true
NEXT_PUBLIC_ENABLE_PAYMENTS=true

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Development Settings
NODE_ENV=production
